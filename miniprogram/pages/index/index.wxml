  <view wx:if="{{initstatus ==1}}" class="recentorderinfo">
    <view class="weui-panel weui-panel_access" wx:if="{{ hasrecentorder}}">
      <view class="weui-panel__hd">有效预约</view>
      <view class="weui-panel__bd" wx:for="{{neworderarray}}" wx:key="_id">

        <view class="weui-media-box weui-media-box_appmsg kevinborder" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.personImgCloudID}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" bindlongtap="longpress" id="{{item._id}}">
            <view class="weui-media-box__title">{{item.bfrName}}
              <view wx:if="{{item.approveStatus==0}}" class="kevinwait"></view>
              <view wx:if="{{item.approveStatus==1}}" class="kevinsuc"></view>
              <view wx:if="{{item.approveStatus==2}}" class="kevinerr"></view>
            </view>
            <view class="weui-media-box__desc">将于{{item.createdtime}} 访问： {{item.bfrName}} 联系方式：{{item.bfrPhone}}
            </view>
          </view>
        </view>


      </view>
    </view>
    <!-- <view wx:if="{{ initstatus==1&& hasrecentorder}}" class="getorder"></view> -->
    <view wx:if="{{  hasrecentorder==false}}" class="notgetorder">您没有有效预约,可以</view>
  </view>

      <view class="changetobfr" wx:if="{{initstatus ==2}}">
        <button type="primary" bindtap="subscribemsgbfr">订阅来访消息</button>
      </view>
   
  <view wx:if="{{initstatus ==2}}" class="recentorderinfo">
    <view class="weui-panel weui-panel_access" wx:if="{{ hasrecentorderforbfr}}">
      <view class="weui-panel__hd">希望访问您的人</view>
      <view class="weui-panel__bd" wx:for="{{neworderforbfrarray}}" wx:key="_id">

        <view url="" class="weui-media-box weui-media-box_appmsg kevinborder" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.personImgCloudID}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg" bindtap="visitordetail" id="{{item._id}}">
            <view class="weui-media-box__title kevinrow">{{item.personName}}
              <view wx:if="{{item.approveStatus==0}}" class="kevinwait"></view>
              <view wx:if="{{item.approveStatus==1}}" class="kevinsuc"></view>
              <view wx:if="{{item.approveStatus==2}}" class="kevinerr"></view>
            </view>
            <view class="weui-media-box__desc">将于{{item.createdtime}} 访问您 他的联系方式：{{item.personPhone}}
            </view>
          </view>
        </view>


      </view>
    </view>

    <view wx:if="{{  hasrecentorderforbfr==false}}" class="notgetorder">最近没有人申请访问您</view>
  </view>



  <view wx:if="{{initstatus ==1 }}" class="neworder">
    <button type="primary" bindtap="buildNewOrder">预约</button>
  </view>

  <view wx:if="{{initstatus ==1}}" class="changetobfr">
    <button type="primary" bindtap="changetointerviewee">我是被访者</button>
  </view>
